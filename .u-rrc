paths = projekty/bash/niemoje projekty/c/niemoje projekty/cpp/niemoje projekty/perl/niemoje projekty/python/niemoje cvs

tools = svn git hg cvs bzr

svn-dir = .svn
svn-name = subversion
svn-commands = "svn update"

git-dir = .git
git-name = git
git-commands = "git pull"

hg-dir = .hg
hg-name = mercurial
hg-commands = "hg pull" "hg update"

cvs-dir = CVS
